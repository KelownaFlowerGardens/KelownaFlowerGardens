<script>
const params = new URLSearchParams(window.location.search);
const token = params.get("token");
const msg = document.getElementById("msg");
const strengthBar = document.getElementById("strength");
const data = await res.json();

if (!res.ok) {
  msg.textContent = data.error || "Reset failed";
  msg.className = "msg error";

  if (data.error?.includes("expired")) {
    setTimeout(() => {
      window.location.href = "reset-expired.html";
    }, 1500);
  }
  return;
}


function toggle(id){
  const el = document.getElementById(id);
  el.type = el.type === "password" ? "text" : "password";
}

document.getElementById("password").addEventListener("input", e => {
  const v = e.target.value;
  let score = 0;

  if (v.length >= 8) score++;
  if (/[A-Z]/.test(v)) score++;
  if (/[0-9]/.test(v)) score++;
  if (/[^A-Za-z0-9]/.test(v)) score++;

  const colors = ["#c00","#f90","#2b7a2b","#2b7a2b"];
  strengthBar.style.width = `${score * 25}%`;
  strengthBar.style.background = colors[score-1] || "#eee";
});

document.getElementById("resetForm").addEventListener("submit", async e => {
  e.preventDefault();
  msg.textContent = "";
  msg.className = "msg";

  const password = passwordEl.value;
  const confirm = confirmEl.value;

  if (password !== confirm) {
    msg.textContent = "Passwords do not match.";
    msg.className = "msg error";
    return;
  }

  const res = await fetch("/api/password-reset", {
    method:"POST",
    headers:{ "Content-Type":"application/json" },
    body: JSON.stringify({ token, newPassword: password })
  });

  const data = await res.json();

  if (!res.ok) {
    window.location.href = "reset-expired.html";
    return;
  }

  msg.textContent = "Password reset successful!";
  msg.className = "msg success";

  setTimeout(() => {
    window.location.href = "Members.html";
  }, 2000);
});
</script>

